<h1> Recipes </h1>

<div class="recipe-body">
    <li> <%= @cocktail.name%> </li>
</div>

<div class="doses-body">
<% @cocktail.doses.each do |d| %>
<%= d.ingredient.name %>
<%= d.description %>

<div class="btn btn-secondary"><%= link_to "DELETE", dose_path(d.id), method: :delete, data: { confirm: "Are you sure?" }%>

</div>
<div class="btn btn-secondary"><%= link_to "BACK", cocktails_path %>
</div>
</div>
<% end %>




<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h3>Add a new dose</h3>
      <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.association :ingredient, input_html: { class: "beautiful-dropdown" }, include_hidden: false %>
      <%= f.input :description %>
      <%= f.button :submit, class: "btn btn-primary" %>
      <% end %>
      <div>
      </div>
    </div>

